<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#5C3507" /> <!-- Màu đen với độ mờ -->
            <corners android:radius="30dp" />
        </shape>
    </item>
    <!-- Actual shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Màu nền cho hình dạng thực tế -->
            <stroke
                android:width="1dp"
                android:color="@color/color_custom_light_gray" />
            <corners android:radius="30dp" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</layer-list>